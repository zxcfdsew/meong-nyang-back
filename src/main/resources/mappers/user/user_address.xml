<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.meongnyang.shop.repository.user.UserAddressMapper">

    <update id="saveAddress">
        insert into address_tb
        values(default, #{userId}, #{zipcode}, #{addressDefault}, #{addressDetail})
    </update>

    <select id="findAddressByUserId" resultType="java.lang.Long">
        select
            *
        from
            address_tb
        where
            user_id = #{userId}
    </select>

    <update id="UpdateAddressByUserId">
        update
            address_tb
        set
            zipcode = #{zipcode},
            address_default = #{addressDefault},
            address_detail = #{addressDetail}
        where
            user_id = #{userId}
    </update>

</mapper>
